<h1>Administrar productos</h1>

<div class="containerRealTime">
    <div class="containerForm">
        <h2>Añadir Nuevo Producto</h2>
        <form class="form" onsubmit='return addProd()' id="productForm">
            <input class="inputForm" type="text" name="title" id="title" placeholder="Nombre del producto">
            <br></br>

            <input class="inputForm" type="text" name="description" id="description" placeholder="Descripción">
            <br></br>

            <input class="inputForm" type="text" name="category" id="category" placeholder="Categoría">
            <br></br>

            <input class="inputForm" type="text" name="price" id="price" placeholder="Precio">
            <br></br>

            <input class="inputForm" type="text" name="thumbnail" id="thumbnail" placeholder="String - Imagen">
            <br></br>

            <input class="inputForm" type="text" name="code" id="code" placeholder="Código">
            <br></br>

            <input class="inputForm" type="text" name="stock" id="stock" placeholder="Stock">
            <br></br>

            <input class="addProdBtn" type="submit" value="Añadir Producto">
        </form>

        <p class="message" id="infoMessage"></p>
    </div>

    <div class="divList">
        <h2>Lista completa en tiempo real</h2>
        <ul class="ulProds" id="listProd"></ul>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="js/realTimeProducts.js"></script>